<reactive:ReactiveUserControl
    x:TypeArguments="local:ITutorialPageViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactive="http://reactiveui.net"
    xmlns:local="using:NexusMods.App.UI.Pages.Tutorial"
    mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="400"
    x:Class="NexusMods.App.UI.Pages.Tutorial.TutorialPageView">

    <Design.DataContext>
        <local:TutorialPageViewModel />
    </Design.DataContext>

    <Canvas Background="#222222">
        <Border x:Name="TutorialBorder" ZIndex="2">

        </Border>

        <local:CustomControl x:Name="OverlayControl" ZIndex="1" Background="#44000000" IsVisible="False"/>

        <Border x:Name="ContentBorder" ZIndex="0">
            <StackPanel Margin="20" Orientation="Horizontal" Spacing="20" VerticalAlignment="Top">
                <Button x:Name="BeginTutorialButton">Begin Tutorial</Button>

                <TextBlock x:Name="Control1">This is some text!</TextBlock>

                <Button x:Name="Control2">This is another button!</Button>
            </StackPanel>
        </Border>
    </Canvas>

</reactive:ReactiveUserControl>
